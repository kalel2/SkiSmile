{% extends '::base.html.twig' %}
{% block body %}
    <div class="gallery-page">
        <div class="parallax-container">
            <div class="parallax"><img alt="" src="{{ asset('bundles/skismile/images/paralax-1.jpg') }}"></div>
        </div>
        <div class="gallery-wrapper">
            <h4 class="center page-header">{{ 'Фотогалерея '|trans }}</h4>
            <div class="row">
                <div class="row">
                    {% for fotoGallery in pagination %}
                        <div class="col s12 m2 image-wrapper">
                            <div class="image">
                                {% set image = vich_uploader_asset(fotoGallery, 'imageFile') %}
                                {#<a href="images/image-2.jpg" data-lightbox="roadtrip">Image #2</a>#}
                                <a href="{{ asset(['bundles/skismileadmin/', image]|join) }}" data-lightbox="{{ place }}" data-title="{{ fotoGallery.description }}">
                                    <img class="responsive-img product-image" src="{{ asset(['bundles/skismileadmin/', image]|join) }}"  />
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
