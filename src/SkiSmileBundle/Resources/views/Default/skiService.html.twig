<div class="ski-service">
    <h4 class="block-header">{{ 'Сервісне обслуговування'|trans }}</h4>
    <p class="center">
        {{
            'Професійне сервісне обслуговування проводиться
            на станках швейцарської фірми MONTANA та німецької REICHMANN.'|trans
        }}
    </p>
    <table class="stripped ski-table">
        <thead>
        <tr>
            <th>{{ 'Послуга'|trans }}</th>
            <th>{{ 'Ціна'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    {{ entity.service }}
                </td>
                <td>
                    {{ entity.price }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>