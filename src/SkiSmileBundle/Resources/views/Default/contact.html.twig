<div class="contact-form-wrapper">
    <h4 class="center">{{ "У вас виникли запитання? Зв'яжіться з нами!"|trans }}</h4>
    <h5 class="center">{{ 'Заповніть форму нижче, щоб надіслати e-mail'|trans }}</h5>
    {{ form_start(form, { 'action': path('contact_home'), 'method': 'POST', 'attr': {'class': 'container'}}) }}
    <div class="row">
        <div class="input-field col s12 m6">
            {{ form_widget(form.name, {'attr':{'class':'validate'}}) }}
            {{ form_label(form.name) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="input-field col s12 m6">
            {{ form_widget(form.email, {'attr':{'class':'validate'}}) }}
            {{ form_label(form.email) }}
            {{ form_errors(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            {{ form_widget(form.subject, {'attr':{'class':'validate'}}) }}
            {{ form_label(form.subject) }}
            {{ form_errors(form.subject) }}
        </div>
        <div class="input-field col s12">
            {{ form_widget(form.message, {'attr':{'class':'materialize-textarea'}}) }}
            {{ form_label(form.message) }}
            {{ form_errors(form.message) }}
        </div>
    </div>
    <div class="center">
        <button class="btn waves-effect waves-light" type="submit" name="action">
            {{ 'Відправити'|trans }}
        </button>
    </div>
    {{ form_end(form) }}
</div>