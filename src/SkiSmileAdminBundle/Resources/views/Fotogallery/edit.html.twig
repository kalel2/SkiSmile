{% extends '@SkiSmileAdmin/Default/base.html.twig' %}

{% block body %}
    <div class="row card-panel">
        <h4 class="center">{{ 'Редагувати фото'|trans }}</h4>
        <div class="col s12">
            {{ form_start(edit_form, { 'action': path('fotogallery_admin_new',{'place': place}), 'method': 'POST'}) }}
            {#{{ form_widget(edit_form) }}#}
            <div class="input-field col s12 m6">
                {{ form_widget(edit_form.place,{'attr':{'class':'validate'}}) }}
                {{ form_label(edit_form.place) }}
                {{ form_errors(edit_form.place) }}
            </div>

            <div class="file-field input-field col s12 m6">
                <div class="btn col s6 m3">
                    <span>{{ 'Зображення'|trans }}</span>
                    {{ form_widget(edit_form.imageFile,{'attr':{'class':'validate'}}) }}
                </div>
                {{ form_errors(edit_form.imageFile) }}
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <div class="row ski-form-actions">
                <div class="col s12 m3">
                    <input class="btn col s12 m6" type="submit" value="{{ 'Редагувати'|trans }}" />
                </div>
                {{ form_end(edit_form) }}
                <div class="col s12 m3">
                    <a class="btn col s12 m6" href="{{ path('fotogallery_admin_index', {'place':place}) }}">{{ 'Повернутись'|trans }}</a>
                </div>
                <div class="col s12 m3 submit-button">
                    {{ form_start(delete_form) }}
                    <input class="btn col s12 m6 red" type="submit" value="{{ 'Видалити'|trans }}">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
