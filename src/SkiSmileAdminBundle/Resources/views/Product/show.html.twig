{% extends '@SkiSmileAdmin/Default/base.html.twig' %}

{% block body %}
    <div class="product-oveview-wrapper">
        <div class="container">
            <div class="row">
                <div class="col s12 m6">
                    {% set productImage = vich_uploader_asset(product, 'imageFile') %}
                    <img class="responsive-img product-image" src="{{ asset(['bundles/skismileadmin/', productImage]|join) }}"  />
                </div>
                <div class="col s12 m6">
                    <div>
                        {{ product.name }}
                    </div>
                    <div>
                        {{ product.category }}
                    </div>
                    <div>
                        {{ product.price }}
                    </div>
                </div>
                <div class="col s12">
                    {{ product.description }}
                </div>
            </div>
            <div class="row">
                <div class="col s6 pull-left">
                    <a class="btn" href="{{ path('product_admin_index') }}">{{ 'Повернутись'|trans }}</a>
                </div>
                <div class="col s6 pull-right">
                    <a class="btn" href="{{ path('product_admin_edit', { 'id': product.id }) }}">{{ 'Редагувати'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
