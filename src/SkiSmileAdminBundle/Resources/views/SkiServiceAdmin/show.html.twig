{% extends 'base.html.twig' %}

{% block body %}
    <h1>Skiservice</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ skiService.id }}</td>
            </tr>
            <tr>
                <th>Service</th>
                <td>{{ skiService.service }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ skiService.price }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if skiService.createdAt %}{{ skiService.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if skiService.updatedAt %}{{ skiService.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('skiservice_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('skiservice_edit', { 'id': skiService.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
