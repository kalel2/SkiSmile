{% extends '@SkiSmileAdmin/Default/base.html.twig' %}

{% block body %}
    <div class="review-container card-panel">
        <h4>{{ 'Редагування відгуку'|trans }}</h4>

        {{ form_start(edit_form, { 'action': path('reviews_admin_edit', {'id':review.id}), 'method': 'POST', 'attr': {'class': 'review-form'}}) }}
        <div class="row">
            <div class="input-field col s12 m6">
                {{ form_widget(edit_form.name, {'attr':{'class':'validate'}}) }}
                {{ form_label(edit_form.name) }}
                {{ form_errors(edit_form.name) }}
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                {{ form_widget(edit_form.message, {'attr':{'class':'materialize-textarea'}}) }}
                {{ form_label(edit_form.message) }}
                {{ form_errors(edit_form.message) }}
            </div>
            <div class="input-field col s12">
                {{ form_widget(edit_form.approved,{'attr':{'class':'validate'}}) }}
                {{ form_label(edit_form.approved) }}
                {{ form_errors(edit_form.approved) }}
            </div>
        </div>
        <div class="row reviews-form-actions">
            <div class="col s12 m3 submit-button">
                <button class="btn waves-effect waves-light col s12 m6" type="submit" name="action">
                    {{ 'Редагувати відгук'|trans }}
                </button>
            </div>
            <div class="col s12 m3">
                <a class="btn col s12 m6" href="{{ path('reviews_admin_index') }}">{{ 'Повернутись'|trans }}</a>
            </div>
        </div>
        {{ form_end(edit_form) }}
        <div class="row">
            <div class="col s12 m3 submit-button">
                {{ form_start(delete_form) }}
                <input class="btn red col s12 m6" type="submit" value="{{ 'Видалити'|trans }}">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
            {#{{ form_start(delete_form) }}#}
                {#<input type="submit" value="Delete">#}
            {#{{ form_end(delete_form) }}#}
{% endblock %}
