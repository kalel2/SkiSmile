{% extends '@SkiSmileAdmin/Default/base.html.twig' %}
{% block body %}
    <div class="row">
        <div class="container">
            <div class="card-panel">
                <div class="row">
                    <div class="col s12"><h5>{{ 'Тема: ' ~ contactMessage.subject|capitalize }}</h5></div>
                    <div class="col s12"><h5>{{ 'Від: ' ~ contactMessage.name|capitalize }}</h5></div>
                    <div class="col s12"><h5>{{ 'Email: ' ~ contactMessage.email }}</h5></div>
                    <div class="col s12 message">
                        <h5>{{ 'Повідомлення'|trans }}</h5>
                        <article>
                            <p>
                                {{ contactMessage.message|nl2br }}
                            </p>
                        </article>
                    </div>
                    <div class="col s12 m4 card-action">
                        <a class="btn" href="{{ path('contactmessage_admin_index') }}">{{ 'Повернутись'|trans }}</a>
                    </div>
                    <div class="col s12 m4">
                        {{ form_start(delete_form) }}
                            <input class="btn red" type="submit" value="{{ 'Видалити'|trans }}">
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
