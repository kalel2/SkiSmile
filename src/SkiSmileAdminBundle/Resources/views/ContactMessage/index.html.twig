{% extends '@SkiSmileAdmin/Default/base.html.twig' %}
{% block body %}
    <div class="contact-message-wrapper">
        <h4 class="center blue-grey-text">{{ 'Контактні запити'|trans }}</h4>
        <div class="row">
            {% for contactMessage in pagination %}
                <div class="col s12 m4">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">{{ contactMessage.subject}}</span></br>
                            <span class="card-title">{{ 'Від '|trans ~ contactMessage.name ~ ' ('~ contactMessage.email ~')'  }}</span>
                            <p>{{ contactMessage.message|nl2br|slice(0, 25) ~ '...' }}</p>
                        </div>
                        <div class="card-action">
                            <a class="btn cyan" href="{{ path('contactmessage_admin_show', { 'id': contactMessage.id }) }}">{{ 'Переглянути'|trans }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
